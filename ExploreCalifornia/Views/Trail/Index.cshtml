@model IEnumerable<ExploreCalifornia.Models.Trail>

@{
    ViewBag.Title = "Index";
}

<h2>Trail Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">


    <tr>
        @foreach (var item in Model)
        {
            <td>
                <img src="@Url.Content(item.TrailCover)" width="100" height="100">
            </td>
        }
    </tr>

    <tr>
        @foreach (var item in Model)
        {
            <td>
                @Html.ActionLink(item.TrailName, "Details", new { id = item.Id })
            </td>
        }
    </tr>

    <tr>
        @foreach (var item in Model)
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        }
    </tr>






</table>


